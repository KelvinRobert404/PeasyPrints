<Window x:Class="PeasyPrint.Helper.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PeasyPrint Settings" Height="260" Width="500" WindowStartupLocation="CenterScreen">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <TextBlock Text="Select printers" FontWeight="Bold" FontSize="16" />

    <StackPanel Grid.Row="1" Margin="0,12,0,0" Orientation="Vertical" >
      <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
        <TextBlock Text="Black &amp; White:" Width="140" VerticalAlignment="Center" />
        <ComboBox x:Name="BwCombo" Width="300" />
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
        <TextBlock Text="Color:" Width="140" VerticalAlignment="Center" />
        <ComboBox x:Name="ColorCombo" Width="300" />
      </StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
        <TextBlock Text="Fallback (optional):" Width="140" VerticalAlignment="Center" />
        <TextBox x:Name="FallbackText" Width="300" />
      </StackPanel>
    </StackPanel>

    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
      <Button Content="Test BW" Margin="0,0,8,0" Click="OnTestBw" />
      <Button Content="Test Color" Margin="0,0,8,0" Click="OnTestColor" />
      <Button Content="Save" IsDefault="True" Click="OnSave" />
    </StackPanel>
  </Grid>
</Window>


